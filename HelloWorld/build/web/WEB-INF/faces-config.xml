<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.chechUser()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.chechUser()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.chechUser()}</from-action>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationBean.signUp()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{registrationBean.signUp()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderBean.deleteProduct()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{orderBean.deleteProduct()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/success.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderBean.redirec()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{orderBean.redirec()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderBean.redirecS()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{orderBean.redirecS()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderBean.redirecStart()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{orderBean.redirecStart()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
            
        
</faces-config>